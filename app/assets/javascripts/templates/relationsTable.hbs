<table class="relations-table table">
	<thead>
		<th>Parent name</th>
		<th>Relation</th>
		<th>Child name</th>
	</thead>
	<tbody>
		{{#if relations}}
			{{#each relations}}
			<tr>
			<td>{{parent.title}}</td>
			<td>{{this.title}}</td>
			<td>{{child.title}}</td>
			</tr>
			{{/each}}
		{{else}}
		<tr>
		<td colspan="3">No relations</td>
		</tr>
		{{/if}}
	</tbody>
</table>